{
  "name": "roboi",
  "version": "1.0.0",
  "description": "roboi - real time analytics dashboard",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
