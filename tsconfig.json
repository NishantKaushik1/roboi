{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/components/*": [
                "./src/components/*"
            ],
            "@/ui/*": [
                "./src/components/ui/*"
            ],
            "@/charts/*": [
                "./src/components/charts/*"
            ],
            "@/maps/*": [
                "./src/components/maps/*"
            ],
            "@/widgets/*": [
                "./src/components/widgets/*"
            ],
            "@/features/*": [
                "./src/components/features/*"
            ],
            "@/common/*": [
                "./src/components/common/*"
            ],
            "@/providers/*": [
                "./src/providers/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/hooks/*": [
                "./src/hooks/*"
            ],
            "@/services/*": [
                "./src/services/*"
            ],
            "@/store/*": [
                "./src/store/*"
            ],
            "@/utils/*": [
                "./src/utils/*"
            ],
            "@/config/*": [
                "./src/config/*"
            ],
            "@/styles/*": [
                "./src/styles/*"
            ],
            "@/types/*": [
                "./src/types/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}